@model AuctionDetailsModel

@{
    ViewBag.Title = "Auction Details";
}

<h2 class="text-center">@ViewBag.Title</h2>

<div class="container">
    <h2>Auction Details</h2>
    <hr>
    <div class="row">
        <div class="col-md-6">
            <dl class="row">

                <dt class="col-sm-3">Starting Time:</dt>
                <dd class="col-sm-9">@Model.StartingTime.ToString("yyyy-MM-dd HH:mm:ss")</dd>

                <dt class="col-sm-3">End Time:</dt>
                <dd class="col-sm-9">@Model.EndTime.ToString("yyyy-MM-dd HH:mm:ss")</dd>

                <dt class="col-sm-3">Starting Price:</dt>
                <dd class="col-sm-9">@($"{Model.StartingPrice} BGN")</dd>

                <dt class="col-sm-3">Minimum Bid Increment:</dt>
                <dd class="col-sm-9">@($"{Model.MinimumBidIncrement} BGN")</dd>

            </dl>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <a asp-action="Index" class="btn btn-primary">Back to List</a>
            <a asp-area="" asp-controller="Auction" asp-action="Delete" asp-route-id="@Model.Id"
               class="btn btn-danger">Delete Auction</a>
        </div>
        
    </div>
</div>
