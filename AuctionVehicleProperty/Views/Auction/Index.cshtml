@model IEnumerable<AuctionIndexServiceModel>

@foreach (var item in Model)
{
    <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="@item.Vehicle.ImageUrls" class="img-fluid rounded-start" alt="...">
                <a asp-controller="Auction" asp-action="Details" asp-route-id="@item.Id"
                   class="btn btn-primary btn-sm">Details</a>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@item.Vehicle.Make,@item.Vehicle.Model</h5>
                    <p class="card-text">@item.Vehicle.Title</p>
                    <p class="card-text"><small class="text-body-secondary">@item.StartingPrice BGN</small></p>
                    <div class="u-typography-h7 u-color-mid-gray"><time class="u-typography-h7 u-color-mid-gray">Starting At: @item.StartingTime</time></div>
                </div>
            </div>
        </div>
    </div>
    
}
