@model AuctionDetailsModel

@{
    ViewBag.Title = "Delete Auction";
}

<h2 class="text-center">@ViewBag.Title</h2>

<form asp-action="Delete" asp-controller="Auction" method="post">
    <div class="row">
        <div class="col-md-4">
            <img class="card-img-top" src="@Model.Vehicle.ImageUrls" alt="Vehicle Image">
        </div>
        <div class="col-md-8">
            <div class="form-group">
                <label asp-for="StartingTime" class="control-label"></label>
                <input asp-for="StartingTime" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <label asp-for="EndTime" class="control-label"></label>
                <input asp-for="EndTime" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <label asp-for="VehicleId" class="control-label"></label>
                <input asp-for="VehicleId" class="form-control" disabled="disabled" />
            </div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreatorId" />
            <input type="submit" value="Delete" class="btn btn-primary" />
        </div>
    </div>
</form>
